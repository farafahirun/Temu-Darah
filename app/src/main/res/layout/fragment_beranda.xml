<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BerandaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="30dp"
            android:paddingEnd="20dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="Back"
                android:src="@drawable/logo_merah" />

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="240dp"
                android:contentDescription="Notification"
                android:src="@drawable/notifikasi_on"
                app:tint="@color/utama" />
        </LinearLayout>

        <!-- ScrollView for content below -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearLayout2"
            android:fillViewport="true">

            <!--  Carousel pic  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageCarousel"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="29dp"
                    android:contentDescription="Main Image"
                    android:scaleType="centerInside"
                    android:src="@drawable/carousel" />

                <!-- CardView untuk pendonor -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/listPendonorCard"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:layout_marginTop="16dp"
                    android:background="?android:attr/windowBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="Butuh Pendonor saat ini!!"
                            android:textColor="@color/text_utama"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_pendonor"
                            android:layout_width="match_parent"
                            android:layout_height="412dp"
                            android:clipToPadding="false"
                            android:fadeScrollbars="true"
                            android:paddingHorizontal="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="80dp"
                            android:scrollbarStyle="outsideOverlay"
                            android:scrollbars="vertical"
                            tools:listitem="@layout/item_pendonor" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>