<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.RiwayatFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riwayat Donasi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/fixed_black"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <LinearLayout
        android:id="@+id/filterGroupDonorDarah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter:"
            android:textColor="@color/fixed_black"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"/>

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/filterBtnSemuaDonor"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Semua"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/border_card_utama"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/filterBtnSebagaiPendonor"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Sebagai Pendonor"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/border_card_utama"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/filterBtnSebagaiPenerima"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Sebagai Penerima"
                    android:textSize="12sp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/border_card_utama"
                    android:textColor="@color/white"
                    android:textAllCaps="false"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRiwayat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filterGroupDonorDarah"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_riwayat_donasi" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvEmptyStateRiwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Belum ada riwayat donasi."
        android:textColor="@color/fixed_black"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>