<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RiwayatDonorFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="85dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="Riwayat Donor Darah"
                android:textColor="@color/utama"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="30dp"
            android:paddingEnd="20dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="Back"
                android:src="@drawable/logo_merah" />

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="240dp"
                android:contentDescription="Notification"
                android:src="@drawable/notifikasi_on"
                app:tint="@color/utama" />
        </LinearLayout>

        <!-- ScrollView for content below -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearLayout2"
            android:fillViewport="true">

            <!--  Carousel pic  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/genre_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/semua"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/utama"
                        android:text="Semua"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/utama"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pendonor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/background"
                        android:text="Pendonor"
                        android:textColor="@color/utama"
                        android:textSize="16sp"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/utama"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/penerima"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/background"
                        android:text="Penerima"
                        android:textColor="@color/utama"
                        android:textSize="16sp"
                        app:cornerRadius="8dp"
                        app:strokeColor="@color/utama"
                        app:strokeWidth="1dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyle_riwayat_kegiatan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:fadeScrollbars="true"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="80dp"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>